#!/bin/bash

# 输出文件路径
OUTPUT_FILE="i7z_data_record.txt"

# 每秒采集一次数据，直到用户手动停止
while true
do
    # 记录当前时间戳
    echo "====================" >> $OUTPUT_FILE
    echo "Timestamp: $(date '+%Y-%m-%d %H:%M:%S')" >> $OUTPUT_FILE
    
    # 记录 i7z 的数据
    sudo i7z 2>/dev/null | grep -A 20 "CPU Freq" >> $OUTPUT_FILE

    # 每秒采集一次
    sleep 1
done
